<script>
document.addEventListener('DOMContentLoaded', () => {
  const form = document.getElementById('amazon-search-form');
  const warningBox = document.getElementById('filter-warning');

  new Tagify(document.querySelector('input[name="brand-include"]'));
  new Tagify(document.querySelector('input[name="brand-exclude"]'));

  form.addEventListener('submit', function (e) {
    e.preventDefault();

    const checked = [...form.elements].filter(el =>
      el.type === 'checkbox' && el.checked && !el.closest('.coming-soon')
    ).length;

    if (warningBox) warningBox.style.display = (checked > 2) ? 'block' : 'none';

    ['brandInclude', 'brandExclude'].forEach(id => {
      const tagifyInput = document.getElementById(id);
      if (tagifyInput && tagifyInput._tagify) {
        tagifyInput.value = JSON.stringify(tagifyInput._tagify.value);
      }
    });
document.querySelectorAll('button, input[type="submit"]').forEach(el => {
  el.addEventListener('click', () => {
    const clickSound = document.getElementById('clickSound');
    if (clickSound) clickSound.play().catch(() => {});
  });
});
    const data = new FormData(form);
    const params = new URLSearchParams();
    const rh = [];
    
// --- Prime Only Filter Logic ---
  if (data.get('prime-only') === 'on') {
    rh.push('p_n_prime:1');  // Add Prime Only filter if checked
  }
    if (data.get('free-shipping') === 'on') {
  rh.push('p_n_shipping:free');  // Free shipping filter
}
if (data.get('in-stock') === 'on') {
  rh.push('p_n_in_stock:1');  // Only in-stock items
}
if (data.get('coupons') === 'on') {
  rh.push('p_n_coupon:1');  // Only items with coupons
}
if (data.get('lightning-deals') === 'on') {
  rh.push('p_n_deal_type:23566065011');  // Lightning Deals filter
}
if (data.get('todays-deals') === 'on') {
  rh.push('p_n_deal_type:23566065011');  // Today‚Äôs Deals filter
}
if (data.get('subscribe-save') === 'on') {
  rh.push('p_n_feature_browse-bin:Subscribe-Save');  // Subscribe & Save filter
}
if (data.get('amazon-choice') === 'on') {
  rh.push('p_n_feature_browse-bin:Amazon-Choice');  // Amazon's Choice filter
}
if (data.get('best-seller') === 'on') {
  rh.push('p_n_feature_browse-bin:Best-Sellers');  // Best Seller filter
}
if (data.get('fba-only') === 'on') {
  rh.push('p_n_feature_browse-bin:Sold-and-Shipped-by-Amazon');  // Sold by Amazon filter
}
if (data.get('free-returns') === 'on') {
  rh.push('p_n_feature_browse-bin:Free-Returns');  // Free Returns filter
}
if (data.get('gift-wrap') === 'on') {
  rh.push('p_n_feature_browse-bin:Gift-Wrap');  // Gift Wrap Available filter
}
if (data.get('small-business') === 'on') {
  rh.push('p_n_feature_browse-bin:Small-Business');  // Small Business Products filter
}
if (data.get('amazon-brands') === 'on') {
  rh.push('p_n_feature_browse-bin:Amazon-Brands');  // Amazon Brands filter
}
if (data.get('low-rating') === 'on') {
  rh.push('p_n_feature_browse-bin:Low-Rating');  // Low Rating Products filter
}

    const min = data.get('min-price')?.trim();
    const max = data.get('max-price')?.trim();
    if (min && max) rh.push(`p_36:${Math.round(min * 100)}-${Math.round(max * 100)}`);
    else if (min) rh.push(`p_36:${Math.round(min * 100)}-`);
    else if (max) rh.push(`p_36:-${Math.round(max * 100)}`);

    const brandIncludeRaw = data.get('brand-include')?.trim();
    const brandExcludeRaw = data.get('brand-exclude')?.trim();
    if (brandIncludeRaw) {
      const brands = JSON.parse(brandIncludeRaw).map(obj => obj.value);
      brands.forEach(b => rh.push(`p_89:${encodeURIComponent(b)}`));
    }
    if (brandExcludeRaw) {
      const brands = JSON.parse(brandExcludeRaw).map(obj => obj.value);
      brands.forEach(b => params.append('brand-exclude', b));
    }

    const percentOff = data.get('percent-off');
    const discountMap = {
      "10": "2665401011", "20": "2665412011", "30": "2665413011",
      "40": "2665414011", "50": "2665415011", "60": "2665416011",
      "70": "2665417011", "80": "2665418011"
    };
    if (percentOff && discountMap[percentOff]) {
      rh.push(`p_n_pct-off-with-tax:${discountMap[percentOff]}`);
    }

    if (data.get('lightning-deals') === 'on') {
      rh.push('p_n_deal_type:23566065011');
    }

    if (data.get('enable-boolean') === 'on') params.set('boolean', 'on');
    if (data.get('field-filters')) params.set('fields', data.get('field-filters').trim());
    if (data.get('direct-lookup')) params.set('asin', data.get('direct-lookup').trim());

    const sort = data.get('sort');
    if (sort) params.set('s', sort);

    const query = data.get('q')?.trim();
    if (query) params.set('k', query);

    if (rh.length) params.set('rh', rh.join(','));
    params.set('tag', 'echolover25-20');

    const finalUrl = `https://www.amazon.com/s?${params.toString()}`;
    window.open(finalUrl, '_blank');
  });
});
</script>
 
